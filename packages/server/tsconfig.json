{
    "compilerOptions": {
        "target": "ESNext",
        "module": "commonjs",
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "typeRoots": ["../../node_modules/@types", "./@types"]
    },
    "exclude": [
        "node_modules"
    ]
}
